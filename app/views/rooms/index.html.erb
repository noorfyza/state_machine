<p id="notice"><%= notice %></p>

<h1>Rooms</h1>
<div class="container">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Person name</th>
        <th>Person address</th>
        <th>Person</th>
        <th>No of romms</th>
        <th>Amount per room</th>
        <th>Current state</th>
        <th colspan="3"></th>
      </tr>
    </thead>
      
    <tbody>
      <% @rooms.each do |room| %>
        <tr>
          <td><%= room.person_name %></td>
          <td><%= room.person_address %></td>
          <td><%= room.person_id %></td>
          <td><%= room.no_of_romms %></td>
          <td><%= room.amount_per_room %></td>
          <td><%= room.aasm_state %></td>
          <td><%= link_to 'Show', room %></td>
          <td><%= link_to 'Edit', edit_room_path(room) %></td>
          <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


<br>

